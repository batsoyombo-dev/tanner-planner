<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0">

    <TextField promptText="title" fx:id="inp_panelTitleField" />
    <TextField promptText="desc" fx:id="inp_panelDescField" />
    <TextField promptText="category" fx:id="inp_panelCategoryField" />
    <TextField promptText="color" fx:id="inp_panelColorField" />
<Button text="Submit" onMouseClicked="#handlePanelSubmit" />
</VBox>
