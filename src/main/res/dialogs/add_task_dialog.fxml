<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0"
          prefWidth="300.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/15.0.1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="145.0" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="203.0" minWidth="10.0" prefWidth="200.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Label text="Title:">
        <GridPane.margin>
          <Insets left="30.0"/>
        </GridPane.margin>
    </Label>
    <TextField fx:id="inp_bucketTitleField" GridPane.columnIndex="1">
        <GridPane.margin>
          <Insets right="30.0"/>
        </GridPane.margin>
    </TextField>
    <TextField fx:id="inp_bucketDescField" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <GridPane.margin>
          <Insets right="30.0"/>
        </GridPane.margin>
    </TextField>
    <TextField fx:id="inp_bucketStateField" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <GridPane.margin>
          <Insets right="30.0"/>
        </GridPane.margin>
    </TextField>
    <Label text="Description:" GridPane.rowIndex="1">
        <GridPane.margin>
          <Insets left="30.0"/>
        </GridPane.margin>
    </Label>
    <Label text="State:" GridPane.rowIndex="2">
        <GridPane.margin>
          <Insets left="30.0"/>
        </GridPane.margin>
    </Label>
    <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
      <buttons>
          <Button fx:id="btnAddTask" mnemonicParsing="false" onAction="#taskAdded" text="Add task"/>
          <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#taskCanceled" text="Cancel"/>
      </buttons>
        <GridPane.margin>
          <Insets right="30.0"/>
        </GridPane.margin>
    </ButtonBar>
</GridPane>
