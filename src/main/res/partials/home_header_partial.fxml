<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER_RIGHT" styleClass="header" stylesheets="@../css/home_header_partial.css, @../css/global.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">

    <HBox styleClass="search-container, sub-container">
        <TextField fx:id="inp_searchField" promptText="Search..." styleClass="search-input" HBox.hgrow="ALWAYS" />
        <Button styleClass="btn, search-btn" onMouseClicked="#handleSearchBtnClick"  />
    </HBox>

    <HBox styleClass="btn-container, sub-container">
        <Button fx:id="btnHelp" onMouseClicked="#handleNewPanelClick" styleClass="btn">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
        <Button styleClass="btn">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
    </HBox>

</HBox>
